<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.leanback.widget.BrowseFrameLayout
        android:id="@+id/blfNavBar"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#282828"
        android:nextFocusLeft="@id/container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Search"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_search"
            android:focusable="true"
            style="@style/side_menu_text_non_focus"
            android:background="@drawable/selector_menu"/>

        <TextView
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:text="Home"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_home"
            android:layout_height="45dp"
            style="@style/side_menu_text_non_focus"
            android:focusable="true"
            android:background="@drawable/selector_menu"/>

        <TextView
            android:id="@+id/btn_movies"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_movie"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            android:text="Movies"
            android:layout_height="45dp"
            android:focusable="true"
            style="@style/side_menu_text_non_focus"
            android:background="@drawable/selector_menu"/>

        <TextView
            android:id="@+id/btn_tv"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_tv"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            android:text="TV"
            android:focusable="true"
            style="@style/side_menu_text_non_focus"
            android:background="@drawable/selector_menu"/>

        <TextView
            android:id="@+id/btn_sports"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_sports"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            android:text="Sports"
            android:focusable="true"
            style="@style/side_menu_text_non_focus"
            android:background="@drawable/selector_menu"/>

        <TextView
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:drawableStart="@drawable/ic_settings"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            android:text="Settings"
            android:focusable="true"
            style="@style/side_menu_text_non_focus"
            android:background="@drawable/selector_menu"/>


    </LinearLayout>
    </androidx.leanback.widget.BrowseFrameLayout>
</LinearLayout>